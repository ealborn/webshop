
@model ArtShop.Project.Core.Models.ProductViewModel

<div class="artWrap">
    <h3>@Model.Title</h3>
    <br />
    <img src="~/images/@Model.Image" alt="product image" />
    <br />
    @Model.Description
    <br />
    @Model.Technique
    <br />
    @Model.Price
    <br />

    @using (Html.BeginForm("Add", "Cart"))
    {
        @Html.TextBoxFor(m => m.Id)
        <button type="submit">Köp</button>
    }

</div>


